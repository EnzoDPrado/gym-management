{
    "openapi": "3.0.0",
    "info": {
        "title": "Gym mannagement - API",
        "description": "An API to practice mine skills of SOLID and CLEAN ARCH",
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/authentication/register": {
            "post": {
                "summary": "User register",
                "description": "This route will register an new user",
                "tags": [
                    "Authentication"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Arnaldo de Souza",
                                        "email": "Arnaldao@gmail.com",
                                        "password": "arnaldo123123",
                                        "age": 29,
                                        "plan_id": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal server error!"
                    },
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user_id": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/authentication/login": {
            "post": {
                "summary": "User login",
                "description": "This route will make the login and return the JWT",
                "tags": [
                    "Authentication"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "juan@gmail.com",
                                        "password": "juan123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Fail on authentication"
                    },
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/user": {
            "delete": {
                "summary": "Delete user",
                "description": "This route will delete an unique user by user id",
                "tags": [
                    "User"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user_id": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success on delete user"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/v1/user/all": {
            "get": {
                "summary": "Get all users",
                "description": "This route will get all users",
                "tags": [
                    "User"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error!"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "passaword": {
                        "type": "string"
                    },
                    "age": {
                        "type": "number"
                    },
                    "plan_id": {
                        "type": "number"
                    }
                }
            }
        }
    }
}
